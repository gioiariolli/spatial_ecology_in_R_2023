\section{Mapping procedure}

\begin{frame}{Mapping procedure}
   \begin{center}
        \vspace*{-1.5cm} 
        \texttt{Comparison among the two indices NBR and NBR+}
    \end{center}
   \begin{columns}
        \begin{column}{0.4\textwidth}
            \begin{equation}
                NBR = \frac{SWIR - VNIR}{SWIR + VNIR}
            \end{equation}
        \end{column}
        \begin{column}{0.6\textwidth}
            \begin{equation}
                NBR+ = \frac{SWIR - VNIR - Green - Blue}{SWIR + VNIR + Green + Blue}
            \end{equation}
        \end{column}
    \end{columns}
\end{frame}

